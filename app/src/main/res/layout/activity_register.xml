<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234865"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="26px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="26px"
        android:src="@mipmap/icon_back" />

    <ImageView
        android:id="@+id/iv_register_logo"
        android:layout_width="164px"
        android:layout_height="130px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:src="@mipmap/ic_logo" />

    <EditText
        android:id="@+id/edit_register_username"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/iv_login_logo"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_marginTop="80px"
        android:background="@drawable/shape_login_edit"
        android:drawableLeft="@mipmap/ic_login_username"
        android:drawablePadding="36px"
        android:hint="手机号/用户名"
        android:maxLines="1"
        android:paddingLeft="28px"
        android:paddingRight="28px"
        android:textColor="#FFC7C7C7"
        android:textColorHint="#FF597389"
        android:textSize="28px" />

    <LinearLayout
        android:id="@+id/ll_register_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_register_code"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_below="@+id/iv_login_logo"
            android:layout_weight="1"
            android:background="@drawable/shape_login_edit"
            android:drawableLeft="@mipmap/ic_register_yanzhengma"
            android:drawablePadding="36px"
            android:hint="6位验证码"
            android:inputType="number"
            android:maxLines="1"
            android:orientation="horizontal"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:textColor="#FFC7C7C7"
            android:textColorHint="#FF597389"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_register_sendCode"
            android:layout_width="204px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:background="@drawable/sel_login_login"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/sel_login_login"
            android:textSize="28px" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_register_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/edit_login_username"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/edit_register_password"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/shape_login_edit"
            android:drawableLeft="@mipmap/ic_login_password"
            android:drawablePadding="36px"
            android:hint="请输入6~12字母/数字"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="28px"
            android:paddingRight="100px"
            android:textColor="#FFC7C7C7"
            android:textColorHint="#FF597389"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_register_watch_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingBottom="38px"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="38px"
            android:src="@mipmap/ic_login_watch" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_register_password_again"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/edit_login_username"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/edit_register_password_again"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/shape_login_edit"
            android:drawableLeft="@mipmap/ic_login_password"
            android:drawablePadding="36px"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="28px"
            android:paddingRight="100px"
            android:textColor="#FFC7C7C7"
            android:textColorHint="#FF597389"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_register_watch_password_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingBottom="38px"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="38px"
            android:src="@mipmap/ic_login_watch" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <CheckBox
            android:visibility="invisible"
            android:checked="true"
            android:id="@+id/cb_register_xieyi"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:drawablePadding="16px"
            android:drawableLeft="@drawable/sel_register_checkbox"
            android:button="@null"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textColor="#FF597389"
            android:textSize="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意《DJ软件及许可证服务协议》" />

        <TextView
            android:id="@+id/tv_register_register"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/frame_login_password"
            android:background="@drawable/sel_login_login"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/sel_login_login"
            android:textSize="32px" />
    </LinearLayout>

</LinearLayout>