<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff1f1f1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="bottom"
        android:background="#FFF"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_tabbar_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tabbar_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tabbar_icon_home_selected" />

            <TextView
                android:id="@+id/tv_tabbar_index"
                android:layout_width="match_parent"
                android:layout_height="32px"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/sel_tabbar_textcolor"
                android:textSize="22px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tabbar_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tabbar_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel_tabbar_icon_find" />

            <TextView
                android:id="@+id/tv_tabbar_find"
                android:layout_width="match_parent"
                android:layout_height="32px"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/sel_tabbar_textcolor"
                android:textSize="22px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tabbar_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tabbar_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel_tabbar_icon_circles" />

            <TextView
                android:id="@+id/tv_tabbar_circle"
                android:layout_width="match_parent"
                android:layout_height="32px"
                android:gravity="center"
                android:text="圈子"
                android:textColor="@color/sel_tabbar_textcolor"
                android:textSize="22px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tabbar_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tabbar_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel_tabbar_icon_mine" />

            <TextView
                android:id="@+id/tv_tabbar_mine"
                android:layout_width="match_parent"
                android:layout_height="32px"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/sel_tabbar_textcolor"
                android:textSize="22px" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>